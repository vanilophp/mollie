{
    "name": "vanilo/mollie",
    "description": "Mollie Payment Gateway Support for Vanilo (Laravel)",
    "type": "library",
    "keywords": ["laravel", "vanilo", "mollie", "payments"],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Vanilo UG"
        }
    ],
    "require": {
        "php": "^8.2",
        "konekt/concord": "^1.13",
        "vanilo/payment": "^4.0",
        "vanilo/contracts": "^4.0",
        "mollie/mollie-api-php": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Vanilo\\Mollie\\": "src"
        }
    },
    "require-dev": {
        "ext-sqlite3": "*",
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit" : "^10.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Vanilo\\Mollie\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
